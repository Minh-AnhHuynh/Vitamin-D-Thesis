@article{Cojic.2021, 
year = {2021}, 
title = {{The Effects of Vitamin D Supplementation on Metabolic and Oxidative Stress Markers in Patients With Type 2 Diabetes: A 6-Month Follow Up Randomized Controlled Study}}, 
