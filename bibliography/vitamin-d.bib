title = {{Importance of Vitamin D and Vitamin D levels Status in Puerto Ricans}}, 
author = {Suárez-Martínez, Edu B. and Pérez, Cynthia M. and Cruz, Sofia K. and Khorsandi, Shayan and Chardón, Camile and Ferder, Leon}, 
