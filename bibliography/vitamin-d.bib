author = {Lips, Paul and Cashman, Kevin D and Lamberg-Allardt, Cje and Bischoff-Ferrari, Heike Annette and Obermayer-Pietsch, Barbara R and Bianchi, Ml and Stepan, Jan and Fuleihan, Ghada El-Hajj and Bouillon, Roger}, 
journal = {European Journal of Endocrinology}, 
