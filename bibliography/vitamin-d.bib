@article{Hollis.2007, 
year = {2007}, 
title = {{Circulating vitamin D3 and 25-hydroxyvitamin D in humans: An important tool to define adequate nutritional vitamin D status}}, 
author = {Hollis, Bruce W. and Wagner, Carol L. and Drezner, Mark K. and Binkley, Neil C.}, 
