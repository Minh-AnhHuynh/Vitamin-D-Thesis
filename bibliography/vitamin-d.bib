author = {Baktash, Vadir and Hosack, Tom and Patel, Nishil and Shah, Shital and Kandiah, Pirabakaran and Abbeele, Koenraad Van den and Mandal, Amit K J and Missouris, Constantinos G}, 
journal = {Postgraduate Medical Journal}, 
